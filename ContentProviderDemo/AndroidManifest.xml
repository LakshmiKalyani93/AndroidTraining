<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.contentproviderdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pcs.contentproviderdemo.CreateContactActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
             android:name="com.pcs.contentproviderdemo.ContactsProvider"
            android:authorities="com.pcs.contentproviderdemo.ContactsProvider"
            android:exported="true"
            android:multiprocess="true"/>
    </application>

</manifest>
