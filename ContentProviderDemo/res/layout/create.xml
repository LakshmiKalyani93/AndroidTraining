<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue" >
    
     <EditText
        android:id="@+id/name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/name_hint"
        android:inputType="text" 
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/email_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:hint="@string/mail_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/type_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/type_hint"
        android:inputType="text" 
         android:textColor="@color/white"/>

    <EditText
        android:id="@+id/number_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/number_hint"
        android:inputType="phone" 
         android:textColor="@color/white"/>

    <Button
        android:id="@+id/addContact_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/addContact"
        android:onClick="onClickAddContact"
         android:textColor="@color/white"
         android:background="@color/red_dart" />
    
      <Button
        android:id="@+id/showContact_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/showContacts"
         android:textColor="@color/white"
         android:background="@color/red_dart"
        />
    
    

</LinearLayout>
