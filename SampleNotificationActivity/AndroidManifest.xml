<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.samplenotificationactivity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
      
        <activity android:name="com.pcs.samplenotificationactivity.SampleNotificationActivity">
            <intent-filter >
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name="com.pcs.samplenotificationactivity.LocalBroadcastActivity"
            android:label="@string/local"/>
        
        <receiver android:name="com.pcs.samplenotificationactivity.SampleBroadcast">
            <intent-filter >
                <action android:name="com.pcs.SEND_BROADCAST_MSG"/>
                
                <action android:name="com.pcs.SEND_NOTIFICATION"/>
                
                 <action android:name="android.intent.action.BOOT_COMPLETED" />
                
            </intent-filter>
        </receiver>
        
        
        
    </application>

</manifest>
