<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.simpleprogressbaractivity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name="com.pcs.simpleprogressbaractivity.SampleActivity">
            <intent-filter >
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name="com.pcs.simpleprogressbaractivity.EventActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/event_des"></activity>
       
        <activity android:name="com.pcs.simpleprogressbaractivity.MenuStyleActivity"
            android:label="@string/menu_des"
            android:theme="@android:style/Theme.Dialog"></activity>
        
        <activity android:name="com.pcs.simpleprogressbaractivity.ContactsDisplayActivity"
            android:label="@string/contacts_label"></activity>
    </application>

</manifest>
